{
  "name": "@hramini/node-core",
  "version": "1.0.0",
  "description": "This is a core for every nodeJs backend",
  "main": "./dist/back-core-expose.js",
  "types": "./dist/back-core-types.d.ts",
  "files": ["dist"],
  "scripts": {
    "tsc": "rm -rf dist && tsc --project ./tsconfig.publish.json && tsc-alias --project ./tsconfig.publish.json",
    "dts:bundle": "dts-bundle-generator --external-imports express @hramini/ioc -o ./dist/back-core-types.d.ts ./dist/back-core-expose.js",
    "dts:publish": "npm run tsc && npm run dts:bundle",
    "prepublishOnly": "npm run dts:publish",
    "test": "jest --watchAll --coverage",
    "dev": "ts-node ./example/index.ts"
  },
  "author": {
    "name": "Hamidreza Amini",
    "email": "hramini72@gmail.com",
    "url": "https://hramini.ir"
  },
  "contributors": [
    {
      "name": "Hamidreza Amini",
      "email": "hramini72@gmail.com",
      "url": "https://hramini.ir"
    }
  ],
  "keywords": ["node", "express", "backend"],
  "license": "MIT",
  "_moduleAliases": {
    "src": "./src"
  },
  "dependencies": {
    "@hramini/ioc": "1.0.0",
    "dotenv": "10.0.0",
    "eslint-config-prettier": "9.1.0",
    "express": "4.17.1",
    "module-alias": "2.2.2",
    "reflect-metadata": "0.1.13",
    "ts-node": "9.1.1",
    "tsc-alias": "1.3.8"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/node": "14.14.27",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "eslint": "8.56.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.0",
    "eslint-plugin-promise": "6.1.1",
    "typescript": "5.3.3"
  }
}
